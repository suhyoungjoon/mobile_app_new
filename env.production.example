# 프론트엔드 환경 변수
VITE_API_URL=https://your-backend-url.onrender.com/api

# 백엔드 환경 변수
NODE_ENV=production
PORT=3000

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=3d

# 데이터베이스 설정 (Render에서 자동 제공)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=insighti_db
DB_USER=insighti_user
DB_PASSWORD=your-db-password

# 파일 업로드
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# SMS API (Naver Cloud Platform)
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SERVICE_ID=your-sms-service-id
SMS_FROM_NUMBER=your-sms-from-number

# CORS 설정
CORS_ORIGIN=https://your-frontend-url.vercel.app
